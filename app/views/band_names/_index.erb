<% bands ||= [] %>
<% pagination_param ||= :page %>

<div class="col-xs-12">
  <% begin %>
      <%= paginate bands, param_name: pagination_param %>
  <% rescue %>
  <% end %>
</div>

<% bands.each_with_index do |band, i| %>
    <%= render partial: 'band_names/show', locals: {band: band, query: @query, num: i} %>
<% end %>

<% if bands.size == 0 %>
    <div class="col-xs-12">
      <p>Where is your Rock and Roll spirit?</p>
      <%= link_to 'Add A Band Name!', new_band_name_path, role: :button, class: 'btn btn-primary btn-lg quote-button' %>
    </div>
<% end %>

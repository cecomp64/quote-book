<div class="page-header">
  <%= link_to new_band_name_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Band name
  <% end %>
  <h1>Listing band_names</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Person</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @band_names) do |band_name| %>
            <td><%= band_name.name %></td>
            <td><%= band_name.person_id %></td>
            <td><%= link_to 'Show', band_name %></td>
        <td><%= link_to 'Edit', edit_band_name_path(band_name) %></td>
        <td><%= link_to 'Destroy', band_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

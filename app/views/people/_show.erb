<% width ||= 6 %>
<% num ||= 1 %>

<div class="col-xs-12 col-sm-<%=width%> <%= num % 2 == 0 ? 'clear' : ''%>">
  <h3><%= display_person person, @filter ? @filter[:name] : nil %></h3>
  <table class="table-responsive table table-bordered table-hover">
    <tbody>
    <tr>
      <td><strong>Quotes</strong></td>
      <td class="center"><%= person.quotes.count %></td>
    </tr>
    <tr>
      <td><strong>Authorships</strong></td>
      <td class="center"><%= person.entries.count %></td>
    </tr>
    <tr>
      <td><strong>Band Names</strong></td>
      <td class="center"><%= person.band_names.count %></td>
    </tr>
    </tbody>
  </table>
  <div class="row">
    <%= render partial: 'quotes/show', locals: {quote: person.quotes.order(score: :desc).first, width: 12} %>
  </div>
</div>

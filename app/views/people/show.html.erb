<div class="row">
  <div class="col-xs-12">
    <h1 class="home"><%=@person.name%></h1>
    <%= render partial: 'quotes/show', locals: {quote: @random_quote, width: 12} %>
  </div>
</div>

<% if @my_quotes.size > 0 %>
    <div class="row">
      <div class="col-xs-12">
        <h2>All The Stuff You Said</h2>
        <%= render partial: 'quotes/index', locals: {quotes: @my_quotes, pagination_param: :my_quotes} %>
      </div>
    </div>
<% else %>
    <div class="row">
      <div class="col-xs-12">
        <h2>Say Something, Already...</h2>
        <p><%= @person.name %> is either very quiet, or under represented in the book.</p>
        <%= render partial: 'quotes/add_quote' %>
      </div>
    </div>
<% end %>

<% if @their_quotes.size > 0 %>
    <div class="row">
      <div class="col-xs-12">
        <h2>All The Stuff You Said They Said</h2>
        <%= render partial: 'quotes/index', locals: {quotes: @their_quotes, pagination_param: :their_quotes} %>
      </div>
    </div>
<% end %>


<% if @bands.size > 0 %>
    <div class="row">
      <div class="col-xs-12">
        <h2>Your Awesome Band Names</h2>
        <%= render partial: 'band_names/index', locals: {bands: @bands, pagination_param: :bands} %>
      </div>
    </div>
<% else %>
<% end %>
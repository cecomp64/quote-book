<%= form_for(@quote, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @quote.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h4>

      <ul>
      <% @quote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'The Quote', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :text, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Who Said It?', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :attribution, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Who Are You?', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

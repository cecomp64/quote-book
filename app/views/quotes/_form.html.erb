<%# form_for(@quote, html: { class: "form-horizontal", role: "form" }) do |f| %>
<%= form_tag(quotes_path, class: "form-horizontal", role: "form") do %>

    <table id="quote_forms" class="table-responsive table table-striped table-bordered">
      <% @quote.quotes.each do |quote| %>
          <%= render partial: 'quote_form', locals: {quote: quote} %>
      <% end %>
    </table>

    <div class="form-group">
      <%= label_tag :author, 'Who Are You?', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :author, @quote.author ? @quote.author.name : (current_user && current_user.person ?  current_user.person.name : ''), class: "form-control", placeholder: 'Anonymous' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Add Another Part', add_mpq_path, class: 'btn btn-primary', remote: true %>
        <%= submit_tag 'Create Quote', class: "btn btn-primary" %>
      </div>
    </div>
<% end %>

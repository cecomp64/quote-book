<% quotes ||= [] %>
<% width ||= 6 %>
<% pagination_param ||= :page %>
<% query ||= nil %>

<div class="col-xs-12">
  <% begin %>
      <%= paginate(quotes, param_name: pagination_param) if(!quotes.is_a?(Array)) %>
  <% rescue %>
  <% end %>
</div>

<% quotes.each do |quote| %>
    <%= render partial: 'quotes/show', locals: {quote: quote, width: width, query: query} %>
<% end %>
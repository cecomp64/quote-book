<div class="page-header">
  <h1 class="home">The Quote Book</h1>
  <div class="row">
    <%= render partial: 'quotes/show', locals: {quote: @random_quote, width: 12} %>
    <%= render 'quotes/add_quote' %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>The Best Quotes of All Time!</h2>
    <div class="row">
      <%= render partial: 'quotes/index', locals: {quotes: @top_quotes} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>Recent Quotes!</h2>
    <div class="row">
      <%= render partial: 'quotes/index', locals: {quotes: @recent_quotes} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>Loud Mouths</h2>
    <div class="row">
      <%= render partial: 'people/index', locals: {people: @top_quoters} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>A Random Band Name!</h2>
  </div>
  <%= render partial: 'band_names/show', locals: {band: @band, width: 12} %>
  <div class="col-xs-12">
    <%= link_to 'Add A Band Name!', new_band_name_path, role: :button, class: 'btn btn-primary btn-lg quote-button' %>
  </div>
</div>

